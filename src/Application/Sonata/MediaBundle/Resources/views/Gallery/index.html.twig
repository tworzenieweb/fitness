{% extends "TworzeniewebFitnessBundle::layout.html.twig" %}

{% block head_title %}
Galeria -
{{ parent() }}
{% endblock %}

{% block content %}
<h3>Galeria</h3>

    {% for gallery in galleries %}
    <div class="six columns">
        <div class="panel">
          <h5><a href="{{ url('sonata_media_gallery_view', {'id' : gallery.id }) }}">{{ gallery.name }}</a> <span class="label">{{ gallery.GalleryHasMedias.count }}</span></h5>
          
          
          {% if gallery.GalleryHasMedias | length %}
            {% set media = gallery.GalleryHasMedias.first %}
            <div class="sonata-media-gallery-media-item">
                <a class="sonata-media-gallery-media-item-link" href="{{ url('sonata_media_gallery_view', {'id': gallery.id }) }}">
                    {% thumbnail media.media, 'big' %}
                </a>
            </div>
        {% endif %}
        </div>
   </div>
    {% endfor %}
</ul>

{% endblock content %}



